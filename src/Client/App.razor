<FluentDesignSystemProvider AdditionalAttributes="@GetFluentDesignSystemProviderAttributes()">
    <Router AppAssembly="@typeof(Program).Assembly" PreferExactMatches="@true">
        <Found Context="routeData">
            <RouteView RouteData="@routeData" />
        </Found>
        <NotFound>
            <p>Sorry, there's nothing at this address.</p>
        </NotFound>
    </Router>
</FluentDesignSystemProvider>

@code {

    static Dictionary<string, object> GetFluentDesignSystemProviderAttributes()
    {
        return new()
        {
            // TODO:: use FluentDesignSystemProvider.neutralPalette FluentDesignSystemProvider.accentBaseColor
            // For that purpose. Customize FluentDesignSystemProvider
            {"accent-base-color", "#8734E1"},
            {"background-color", "#F6FAFE"}
        };
    }
}